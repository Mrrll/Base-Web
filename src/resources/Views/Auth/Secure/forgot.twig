{% extends 'templates/app.twig' %}

{% block content %}
  <div class="row align-items-center">
    <div class="col col-lg-4 offset-lg-4">
      <div class="card">
        <div class="card-header">
          <h4>
            Forgot password?
          </h4>
        </div>
        <div class="card-body">
          <form action="{{ url_for('auth.password.forgot') }}"
            method="post"
            autocomplete="on"
            novalidate>
            <div class="form-group has-validation">
              <label for="email" class="form-label">Email :</label>
              <input type="email"
                name="email"
                id="email"
                placeholder="you@you.com"
                class="form-control {{ errors.email ? 'is-invalid' : '' }}" value="{{ old.email }}" />
              <div class="invalid-feedback">
                {{ errors.email|first }}
              </div>
            </div>
            <div class="form-action">
              <button type="submit"
                class="btn btn-default mt-3 bg-dark text-white">
                Send
              </button>
              {{ csrf.field | raw }}
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
