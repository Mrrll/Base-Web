{% extends 'templates/app.twig' %}

{% block content %}
  <div class="row align-items-center">
    <div class="col col-lg-4 offset-lg-4">
      <div class="card">
        <div class="card-header">
          <h4>
            Register
          </h4>
        </div>
        <div class="card-body">
          <form action="{{ url_for('auth.register') }}"
            method="post"
            autocomplete="on"
            novalidate>
            <div class="form-group has-validation">
              <label for="email" class="form-label">Email :</label>
              <input type="email"
                name="email"
                id="email"
                placeholder="you@you.com"
                class="form-control {{ errors.email ? 'is-invalid' : '' }}" value="{{ old.email }}" />
              <div class="invalid-feedback">
                {{ errors.email|first }}
              </div>
            </div>
            <div class="form-group has-validation">
              <label for="name" class="form-label">Name :</label>
              <input type="text"
                name="name"
                id="name"
                placeholder="you name"
                class="form-control {{ errors.name ? 'is-invalid' : '' }}" value="{{ old.name }}" />
              <div class="invalid-feedback">
                {{ errors.name|first }}
              </div>
            </div>
            <div class="form-group has-validation">
              <label for="password" class="form-label">Password :</label>
              <input type="password"
                name="password"
                id="password"
                placeholder="you password"
                class="form-control {{ errors.password ? 'is-invalid' : '' }}" />
              <div class="invalid-feedback">
                {{ errors.password|first }}
              </div>
            </div>
            <div class="form-action">
              <button type="submit"
                class="btn btn-default mt-3 bg-dark text-white">
                Register
              </button>
              {{ csrf.field | raw }}
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
