{% extends 'templates/app.twig' %}

{% block content %}
  <div class="row align-items-center">
    <div class="col col-lg-4 offset-lg-4">
      <div class="card">
        <div class="card-header">
          <h4>
            Login
          </h4>
        </div>
        <div class="card-body">
          <form action="{{ url_for('auth.login') }}"
            method="post"
            autocomplete="on"
            novalidate>
            <div class="form-group has-validation">
              <label for="email" class="form-label">Email :</label>
              <input type="email"
                name="email"
                id="email"
                placeholder="you@you.com"
                class="form-control {{ errors.email ? 'is-invalid' : '' }}"
                value="{{ old.email }}" />
              <div class="invalid-feedback">
                {{ errors.email|first }}
              </div>
            </div>
            <div class="form-group has-validation">
              <div class="clearfix">
                <label for="password" class="form-label float-start">
                  Password :
                </label>
                <a href="{{ url_for('auth.password.forgot') }}"
                  class="link-primary float-end">
                  Forgot password?
                </a>
              </div>
              <input type="password"
                name="password"
                id="password"
                placeholder="you password"
                class="form-control {{
                errors.password
                  ? 'is-invalid'
                  : ''
                }}" />
              <div class="invalid-feedback">
                {{ errors.password|first }}
              </div>
            </div>
            <div class="form-action">
              <div class="clearfix">
                <div class="form-check mt-4 float-start">
                  <input class="form-check-input"
                    type="checkbox"
                    name="remember_me"
                    id="remember_me" />
                  <label class="form-check-label" for="remember_me">
                    Remember me!
                  </label>
                </div>
                <button type="submit"
                  class="btn btn-default mt-3 bg-dark text-white float-end">
                  Login
                </button>
              </div>
              {{ csrf.field|raw }}
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
